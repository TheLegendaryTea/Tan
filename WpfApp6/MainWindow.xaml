<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">
    <DockPanel LastChildFill="True" VerticalAlignment="Center" Margin="10">
        <Label Content="Введите первый катет" DockPanel.Dock="Top"/>
        <TextBox x:Name="kat1" DockPanel.Dock="Top"/>
        <Label Content="Введите второй катет" DockPanel.Dock="Top"/>
        <TextBox x:Name="kat2" DockPanel.Dock="Top"/>
        <Button Content="Ok" DockPanel.Dock="Top" Margin="0 10 0 10" Click="Button_Click" />
        <TextBlock x:Name="result2" DockPanel.Dock="Bottom" />
        <TextBlock x:Name="result1" DockPanel.Dock="Bottom" />
    </DockPanel>
</Window>
